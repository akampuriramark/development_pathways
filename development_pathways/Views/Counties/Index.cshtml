@model IEnumerable<development_pathways.Models.County>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">List of Counties</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create New County</a>
        </div>
    </div>
    @{
        if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CountyCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CountyName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountyCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CountyId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.CountyId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.CountyId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No County exists</p>
        }

    }

</div>