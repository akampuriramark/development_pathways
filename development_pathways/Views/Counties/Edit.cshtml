@model development_pathways.Models.County

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group row">
                <h1 class="text-info pl-3">Edit County</h1>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="CountyId" />
            <div class="form-group">
                <label asp-for="CountyCode" class="control-label"></label>
                <input asp-for="CountyCode" class="form-control" />
                <span asp-validation-for="CountyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountyName" class="control-label"></label>
                <input asp-for="CountyName" class="form-control" />
                <span asp-validation-for="CountyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
